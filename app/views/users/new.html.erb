<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>

  <label>Name: </label>
  <%= f.text_field :name %><br>

  <label>Password: </label>
  <%= f.password_field :password %><br>

  <label>Happiness (on a scale of 1-10): </label>
  <%= f.number_field :happiness %><br>

  <label>Nausea (on a scale of 1-10): </label>
  <%= f.number_field :nausea %><br>

  <label>Height (in inches): </label>
  <%= f.number_field :height %><br>

  <label>Tickets: </label>
  <%= f.number_field :tickets %><br>

  <label>Check if You are an Admin</label>
  <%= f.check_box :admin %><br>

  <%= f.submit %>
<% end %>
